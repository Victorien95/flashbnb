{% extends 'base.html.twig' %}

{% block title %}Les annonces{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
          integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
          crossorigin=""/>
    {{ encore_entry_link_tags('css/flickity') }}

    <style>
        .leaflet-div-icon{
            min-height: 30px;
            min-width: 60px;
            background-color: white;
            border-radius: 12px;
            color: #0f0f0f;
            border: none;
            font-size: 14px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;

        }

        .leaflet-div-icon:hover{
            background-color: #0f0f0f;
            color: whitesmoke;
            transform: scale(1.15);
        }
        .leaflet-popup-content, .leaflet-popup-content-wrapper{
            margin: 0;
            padding: 0;
        }
        .card .card-map{
            max-height: 300px;
            max-width: 274px;
        }
        .card:hover{
            transform: scale(1.03);
            transition-duration: 0.5s
        }
        .carousel-inner {
            margin: auto;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
        }


        a{

            vertical-align: middle;

        }
        #map_button{
            font-size: 15px;
        }
        #map_button:hover{
            background-color: #0f0f0f;
            color: whitesmoke;
            transform: scale(1.15);
        }


        #map_container{
            position: sticky;
            top: 0;
        }

        #map{
            position: relative;
            top: 0;
        }
        #map_close{
            cursor: pointer;
            position: absolute;
            top: 15px;
            z-index: 1000;
            font-size: 30px;
            color: black;
            background-color: white;
            border-radius: 8px;
        }
        #map_close:hover, #map_close_smart:hover{
            color: white;
            background-color: black;
            transform: scale(1.15);
            transition-duration: 0.5s
        }

        #map_close_smart{
            cursor: pointer;
            position: fixed;
            bottom: 10%;
            z-index: 10001;
            font-size: 12px;
            background-color: #0f0f0f;
            color: white;
            opacity: 0.95;
            border-radius: 24px;
        }
        #map_container_active{
            /*position: relative;
            transform: translate3d(0, 0, 0);*/
        }
        #map_open{
            cursor: pointer;
            position: fixed;
            z-index: 1000;
            bottom: 10%;
            font-size: 12px;
            background-color: #0f0f0f;
            color: white;
            opacity: 0.95;
            border-radius: 24px;
        }
        #map_open:hover{
            transform: scale(1.15)
        }


        .flickity-viewport {
            transition: height 0.2s;
        }

        .main-carousel{
            min-height: 470px;
        }




    </style>
{% endblock %}

{% block body %}
    <div id="body_container" class="container-fluid">
        <div class="jumbotron mx-5">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.minRooms) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label for="ad_adress">Adresse</label>
                        <input type="text" id="ad_adress">
                    </div>
                </div>
                <div class="col text-center">
                    <div class="form-group">
                        <label for="{{ form.distance.vars.id }}">{{ form_label(form.distance) }}</label>
                        {{ form_widget(form.distance) }}
                        <span id="distance_value" class="text-center"></span>
                    </div>
                </div>
                <div class="col">
                    <label for="{{ form.options.vars.id }}">{{ form_label(form.options) }}</label>
                    {{ form_widget(form.options) }}
                </div>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
            {{ form_end(form) }}
        </div>
        <h1 class="my-4">Voici les annonces de nos hôtes</h1>
        <div class="row">
            <div class="col-12 d-flex justify-content-end pb-4">
                <button id="map_button" class="btn d-none d-lg-block">
                    <i class="far fa-map mr-2"></i>
                    <span id="map_button_str">Afficher la carte</span>
                </button>
            </div>
            <div id="map_container_active" class="col-12">
                <div class="d-flex row justify-content-center mx-2">
                    {% for ad in paginator %}
                        {% include 'common/_ad2.html.twig'  with {'ad': ad }%}
                    {% endfor %}
                    <div class="navigation">
                        {{ knp_pagination_render(paginator) }}
                    </div>
                    <div id="map_open" class="d-lg-none btn">
                        <i class="far fa-map mr-1"></i>Carte
                    </div>
                </div>
                <h1>Recommandations pour vous</h1>
                <div class="main-carousel">
                    {% for ad in suggest %}
                        {% include 'common/_suggest.html.twig' %}
                    {% endfor %}
                </div>
            </div>
           <div id="map_container" class="col">
               <div id="map_close" class="d-none d-lg-block px-3">
                   <i class="fas fa-times"></i>
               </div>
               <div class="row justify-content-center">
                   <div id="map_close_smart" class="d-lg-none btn ">
                       <i class="fas fa-th-list mr-1"></i>Annonces
                   </div>
               </div>
               <div class="row">
                   <div id="map" class="vh-100 rounded" style="width: 100%;"></div>
               </div>
           </div>
        </div>
    </div>

    {#{{ paginator.display }}#}

{% endblock %}
