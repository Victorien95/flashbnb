                    console.log('DOOOWWWNWNN' + sessionStorage.getItem('map'))
                    if (sessionStorage.getItem('map') === '2' && width<='974'){
                        $('#map_container').css({'position':'fixed', 'z-index': '1000'})
                        $('#map_container_active').removeClass('col-lg-7 col-xl-6')

                    }
                }
            })
        })();

    </script>

    <script>
